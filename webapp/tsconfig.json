{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext",
			"ES2017.SharedMemory",
		],
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		],
		"types": [
			"vite/client"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"paths": {
			"libpxlr": [
				"../libpxlr/pkg"
			]
		}
	},
	"include": [
		"./src"
	]
}