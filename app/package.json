{
	"scripts": {
		"start": "concurrently -k \"npm run dev:client\" \"npm run dev:editor\"",
		"dev:client": "snowpack dev",
		"dev:editor": "cargo watch -i .gitignore -i \"pkg/*\" -s \"wasm-pack build --target web --out-name editor\"",
		"build": "npm run build:client && npm run build:editor",
		"build:client": "snowpack build",
		"build:editor": "rimraf pkg && wasm-pack build --target web --out-name editor",
		"test": "web-test-runner \"client/**/*.test.tsx\"",
		"format": "prettier --write \"client/**/*.{js,jsx,ts,tsx}\"",
		"lint": "prettier --check \"client/**/*.{js,jsx,ts,tsx}\""
	},
	"dependencies": {
		"nanoid": "^3.1.20",
		"react": "^16.13.1",
		"react-dom": "^16.13.1"
	},
	"devDependencies": {
		"@babel/preset-react": "^7.10.4",
		"@babel/preset-typescript": "^7.10.4",
		"@snowpack/app-scripts-react": "^1.12.6",
		"@snowpack/plugin-dotenv": "^2.0.4",
		"@snowpack/plugin-react-refresh": "^2.3.5",
		"@snowpack/plugin-sass": "^1.1.1",
		"@snowpack/plugin-typescript": "^1.1.0",
		"@snowpack/plugin-webpack": "^2.1.0",
		"@snowpack/web-test-runner-plugin": "^0.1.3",
		"@testing-library/react": "^11.0.0",
		"@types/chai": "^4.2.13",
		"@types/react": "^16.9.49",
		"@types/react-dom": "^16.9.8",
		"@types/snowpack-env": "^2.3.0",
		"@web/test-runner": "^0.9.0",
		"chai": "^4.2.0",
		"concurrently": "^5.3.0",
		"prettier": "^2.0.5",
		"sass": "^1.29.0",
		"snowpack": "^3.0.0-rc.1",
		"typescript": "^4.0.0"
	}
}
